{
  "private": true,
  "version": "0.8.4",
  "keywords": [
    "vite",
    "vite-plugin",
    "windicss",
    "tailwindcss"
  ],
  "scripts": {
    "example:dev": "npm -C examples/vue run dev",
    "example:build": "npm -C examples/vue run build",
    "dev": "pnpm -r --parallel --filter ./packages run dev",
    "build": "cp README.md packages/vite-plugin-windicss && pnpm -r --filter ./packages run build",
    "publish:ci": "pnpm -r --filter ./packages publish --access public --no-git-checks",
    "release": "npx git-ensure -a && npx bumpp package.json packages/*/package.json --commit --tag --push",
    "test": "jest",
    "test:update": "jest --u"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.6.2",
    "@antfu/ni": "^0.5.5",
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^9.0.8",
    "@types/jest": "^26.0.20",
    "@types/micromatch": "^4.0.1",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "bumpp": "^6.0.6",
    "debug": "^4.3.2",
    "eslint": "^7.22.0",
    "eslint-plugin-jest": "^24.3.2",
    "fast-glob": "^3.2.5",
    "fs-extra": "^9.1.0",
    "git-ensure": "^0.1.0",
    "jest": "^26.6.3",
    "magic-string": "^0.25.7",
    "pnpm": "^5.18.7",
    "rollup": "^2.41.4",
    "ts-jest": "^26.5.4",
    "tsup": "^4.8.11",
    "typescript": "^4.2.3",
    "vite": "^2.1.1",
    "vite-plugin-restart": "^0.0.1"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "0.9.0"
    }
  }
}
